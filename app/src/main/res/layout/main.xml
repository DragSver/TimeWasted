<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Time Waster"
            app:titleTextColor="@color/white"
            android:background="#14471E"
            app:menu="@menu/top_app_bar_title"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:tint="@color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <fragment
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"/>

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        app:shapeAppearance = "@style/ShapeAppearance.Material3.Corner.Large"
        android:elevation="10dp"
        android:backgroundTint="#688F4D"
        android:layout_height="match_parent"
        app:behavior_peekHeight="40dp"
        app:behavior_hideable="false"
        app:behavior_skipCollapsed="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00C7D1D0"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <RadioGroup
                android:id="@+id/radio_group"
                android:checkedButton="@+id/checkbox_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/checkbox_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:layout_marginStart="5dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:layout_marginStart="5dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key"
                    android:layout_marginStart="5dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radio_group_type"
                android:checkedButton="@+id/checkbox_education"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/checkbox_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="education"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_recreational"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="recreational"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="social"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_diy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="diy"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_charity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="charity"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_cooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cooking"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_relaxation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="relaxation"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="music"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
                <RadioButton
                    android:id="@+id/checkbox_busywork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="busywork"
                    android:layout_marginStart="5dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"/>
            </RadioGroup>
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Search key"
                android:inputType="number"
                android:id="@+id/search_key"
                android:textColor="#14471E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:layout_marginStart="20dp"
                android:layout_marginVertical="5dp"
                android:background="@color/white"
                android:textSize="18sp"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>